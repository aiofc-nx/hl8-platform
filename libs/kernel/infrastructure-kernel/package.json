{
  "name": "@hl8/infrastructure-kernel",
  "version": "1.0.0",
  "description": "Infrastructure layer kernel - database, cache, queue, etc.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "dev": "tsc -p tsconfig.build.json --watch",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "migration:create": "mikro-orm migration:create",
    "migration:down": "mikro-orm migration:down",
    "migration:pending": "mikro-orm migration:pending",
    "migration:up": "mikro-orm migration:up",
    "schema:drop": "mikro-orm schema:drop --run",
    "schema:fresh": "mikro-orm schema:fresh --run",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hl8/application-kernel": "workspace:*",
    "@hl8/config": "workspace:*",
    "@hl8/database": "workspace:*",
    "@hl8/domain-kernel": "workspace:*",
    "@hl8/logger": "workspace:*",
    "@mikro-orm/core": "^6.4.2",
    "@mikro-orm/mongodb": "^6.4.2",
    "@mikro-orm/nestjs": "^6.0.2",
    "@mikro-orm/postgresql": "^6.4.2",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@nestjs/testing": "^11.1.6",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testcontainers/mongodb": "^11.0.0",
    "@testcontainers/postgresql": "^11.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.16.0",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.0.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.3.0",
    "prettier": "^3.0.0",
    "reflect-metadata": "^0.2.2",
    "testcontainers": "^11.0.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  }
}
